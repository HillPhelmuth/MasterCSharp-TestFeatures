<div class="tooltip-wrapper">
    <div class="tooltip-content-@Css">
        @Text
    </div>
    @ChildContent
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public string Css { get; set; } = "right";
}